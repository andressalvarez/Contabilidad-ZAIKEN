# Dockerfile para desarrollo - Frontend Next.js
FROM node:18-alpine

WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependencias (usar install en lugar de ci para desarrollo)
RUN npm install

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 3000

# Variables de entorno
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Comando de desarrollo con hot reload
CMD ["npm", "run", "dev"]
