# ========================================
# VARIABLES DE ENTORNO - ZAIKEN SYSTEM
# ========================================

# ========================================
# BASE DE DATOS
# ========================================
# Formato PostgreSQL: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://usuario:password@localhost:5432/zaiken_db?schema=public"

# ========================================
# JWT
# ========================================
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="tu_secreto_super_seguro_cambiar_en_produccion"
JWT_EXPIRATION="7d"

# ========================================
# APLICACIÓN
# ========================================
NODE_ENV="production"
PORT=3000
API_URL="http://localhost:3000"

# ========================================
# CORS (Frontend URL)
# ========================================
CORS_ORIGIN="https://tu-dominio.com,http://localhost:3001"

# ========================================
# BACKUPS
# ========================================
# Directorio donde se guardan los backups
BACKUP_DIR="./backups"
# Cuántos backups mantener (los más antiguos se eliminan)
BACKUP_RETENTION=10

# ========================================
# LOGGING
# ========================================
LOG_LEVEL="info"  # debug, info, warn, error

# ========================================
# OPCIONES DE DEPLOYMENT
# ========================================
# Si usar backup automático antes de deploy
AUTO_BACKUP=true
# Si ejecutar validaciones después de migraciones
AUTO_VALIDATE=true
